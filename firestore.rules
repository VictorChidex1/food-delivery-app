rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper to check if user is accessing their own data
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Helper to check if user is an Admin
    function isAdmin() {
      // Check the 'role' field in the user's document
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "admin";
    }

    // Restaurants: Public Read, Write only for ADMIN
    match /restaurants/{restaurantId} {
      allow read: if true;
      allow write: if isAdmin(); 
    }
    
    // Users: Users can read/write their own profile
    match /users/{userId} {
      allow read, write: if isOwner(userId) || isAdmin();
    }
    
    // Orders: Users can read/write their own orders, Admins can read everything
    match /orders/{orderId} {
      allow read, write: if isAuthenticated() && (resource.data.userId == request.auth.uid || request.resource.data.userId == request.auth.uid || isAdmin());
    }

    // Applications: Public can create, Admin can read/update/delete
    match /applications/{applicationId} {
      allow create: if true;
      allow read, update, delete: if isAdmin();
    }
  }
}
