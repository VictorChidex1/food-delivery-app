rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper to check if user is accessing their own data
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Restaurants: Public Read, Write only if authenticated (or admin)
    // For now, allowing all auth users to write to make the upload script work easily from the app context if needed
    match /restaurants/{restaurantId} {
      allow read: if true;
      allow write: if isAuthenticated(); 
    }
    
    // Users: Users can read/write their own profile
    match /users/{userId} {
      allow read, write: if isOwner(userId);
    }
    
    // Orders: Users can read/write their own orders
    match /orders/{orderId} {
      allow read, write: if isAuthenticated() && (resource.data.userId == request.auth.uid || request.resource.data.userId == request.auth.uid);
    }

    // Applications: Public can create (submit), but NO ONE can read publicly (admin only)
    match /applications/{applicationId} {
      allow create: if true;
      allow read, update, delete: if false;
    }
  }
}
